@using Repository.Models;
@using Repository.Enums;
@model List<Account>
@{
    ViewData["Title"] = "Account Page";
}
<!-- Hoverable Table rows -->
<div class="card p-4">
    <div class="table-responsive text-nowrap">
        <div class="d-flex justify-content-between">
            <form class="d-flex" onsubmit="return false">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" />
                <button class="btn btn-outline-primary" type="submit">Search</button>
            </form>
            <a href="/Account/AddAccount">
                <button type="button" class="btn btn-outline-primary">
                    <span class="tf-icons bx bxs-user-plus"></span>&nbsp; Add Account
                </button>
            </a>
        </div>

        <table class="table table-hover mt-4 mb-4">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Full Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @{
                    int i = 0;
                }
                @foreach (var account in Model)
                {
                    i++;
                    <tr>
                        <td> <strong>@i</strong></td>
                        <td>@account.FullName</td>
                        <td>@account.Username</td>
                        <td>@account.Email</td>
                        <td>@account.Phone</td>
                        <td>
                            @{
                                if (Object.Equals(account.Status, AccountStatus.ACTIVE))
                                {
                                    <span class="badge bg-label-primary me-1">@account.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-label-danger me-1">@account.Status</span>
                                }
                            }
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/Account/AccountDetail/@account.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    @{
                                        if (Object.Equals(account.Status, AccountStatus.ACTIVE))
                                        {
                                            <form id="" asp-action="Inactivate" asp-controller="Account" class="mb-3" method="post">
                                                <input name="Id" value="@account.Id" hidden />
                                                <button class="dropdown-item" type="submit">
                                                    <div class="text-danger"><i class="bx bx-trash me-1 text-danger"></i> Inactivate</div>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form id="" asp-action="Activate" asp-controller="Account" class="mb-3" method="post">
                                                <input name="Id" value="@account.Id" hidden />
                                                <button class="dropdown-item" type="submit">
                                                    <div class="text-primary"><i class="bx bx-trash me-1 text-primary"></i> Activate</div>
                                                </button>
                                            </form>
                                        }
                                    }
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-end">
                <li class="page-item prev">
                    <a class="page-link" href="javascript:void(0);">
                        <i class="tf-icon bx bx-chevrons-left"></i>
                    </a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="javascript:void(0);">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="javascript:void(0);">2</a>
                </li>
                <li class="page-item active">
                    <a class="page-link" href="javascript:void(0);">3</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="javascript:void(0);">4</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="javascript:void(0);">5</a>
                </li>
                <li class="page-item next">
                    <a class="page-link" href="javascript:void(0);">
                        <i class="tf-icon bx bx-chevrons-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

</div>
